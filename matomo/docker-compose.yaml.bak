name: matomo
services:
  matomo:
    container_name: matomo
    environment:
      - LETSENCRYPT_EMAIL=email@something.ext
      - LETSENCRYPT_HOST=stats.mysite.ext
      - MATOMO_DATABASE_ADAPTER=mysql
      - MATOMO_DATABASE_DBNAME=matomo
      - MATOMO_DATABASE_HOST=192.168.88.10
      - MATOMO_DATABASE_PASSWORD=
      - MATOMO_DATABASE_TABLES_PREFIX=matomo_
      - MATOMO_DATABASE_USERNAME=matomo
      - MYSQL_DATABASE=matomo
      - MYSQL_PASSWORD=root
      - MYSQL_USER=root
      - VIRTUAL_HOST=stats.mysite.ext
    env_file:
      - /home/docker/matomo/db.env
    image: matomo
    ports:
      - mode: ingress
        target: 80
        published: "8086"
        protocol: tcp
        host_ip: ""
    restart: unless-stopped
    volumes: []
    devices: []
    cap_add: []
    command: []
    networks:
      - net
    privileged: false
    hostname: matomo
    cpu_shares: 90
    deploy:
      resources:
        limits:
          memory: 256M
networks:
  net:
    name: matomo_net
    driver: bridge
x-casaos:
  hostname: ""
  scheme: http
  index: /
  port_map: "8086"
  author: self
  category: self
  icon: https://w7.pngwing.com/pngs/36/953/png-transparent-matomo-full-logo-tech-companies.png
  title:
    custom: Matomo
