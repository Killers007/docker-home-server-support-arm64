version: "3"

services:
  shlink:
    image: shlinkio/shlink:stable
    restart: always
    environment:
      - TZ="Europe/Berlin"
      - DEFAULT_DOMAIN=https://link.juhdi.my.id
      - IS_HTTPS_ENABLED=false
      - GEOLITE_LICENSE_KEY=<GEOLITE_LICENSE_KEY>
      - DB_DRIVER=mysql
      - DB_USER=root
      - DB_NAME=shlink
      - DB_PASSWORD=root
      - DB_HOST=juhdi.lan
    ports:
      - '8182:8080'